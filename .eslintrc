{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "jasmine": true
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "quotes": ["error", "double"],
    "curly": ["error", "multi"],
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "no-else-return": "off",
    "padded-blocks": "off",
    "max-len": [
      2,
      120
    ],
    "prefer-arrow-callback": 0,
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "flowtype/require-valid-file-annotation": [
      2,
      "always"
    ],
    "flowtype/space-after-type-colon": [
      2,
      "always"
    ],
    "flowtype/require-return-type": [
      1,
      "always",
      {
        "excludeArrowFunctions": true
      }
    ]
  }
}
